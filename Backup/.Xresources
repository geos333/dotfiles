! include ".xres/xft"
! include ".xres/rofi"
! include ".xres/colors/cloudy"
! #include ".xres/urxvt"
! #include ".xres/st"

xteerm*termName: xterm-256color
*xterm*borderWidth: 0
*xterm*faceName: DejaVu Sans Mono for Powerline:style=Light:size=9
!*xterm*faceName: Droid Sans Mono for Powerline Nerd Font:style=Light:size=9
xterm*locale: true
xterm*salveLines: 4096
xterm*faceSize: 9
xterm*saveLines: 4096
xterm*cursorBlink: True
xterm*loginshell: False

xterm*VT100.Translations: #override \
                 Ctrl Shift <Key>V:    insert-selection(CLIPBOARD) \n\
                 Ctrl Shift <Key>C:    copy-selection(CLIPBOARD)


! === gruvbox color scheme ===
*background: #1f1f1f
*foreground: #839496

! Black + DarkGrey
*color0:  #000000
*color8:  #252525

! DarkRed + Red
*color1:  #BA5E57
*color9:  #bf3f34

! DarkGreen + Green
*color2:  #98971a
*color10: #b8bb26

! DarkYellow + Yellow
*color3:  #d79921
*color11: #fabd2f

! DarkBlue + Blue
*color4:  #3b4555
*color12: #83a598

! DarkMagenta + Magenta
*color5:  #b16286
*color13: #d3869b

! DarkCyan + Cyan
*color6:  #689d6a
*color14: #8ec07c

! LightGrey + White
*color7:  #a89984
*color15: #ebdbb2
