#!/bin/bash - 

STATUS=$(upower -i /org/freedesktop/UPower/devices/battery_BAT0 | grep -E "state" | awk '{print $2}')
BAT=$(upower -i /org/freedesktop/UPower/devices/battery_BAT0 | grep -E "percentage" | awk '{print $2}')
SECURELEVEL='40%'

Batery(){
        if [[ $BAT < $SECURELEVEL ]]; then
                if [[ $STATUS == "discharging" ]]; then
                        notify-send -u critical 'Batery Low!' 'connect the charger!!.' --icon=dialog-information
                fi
        fi
}

while true; do Batery; sleep 60; done
